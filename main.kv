<Container>:
    display: display
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        LabelDraw:
            size_hint: 0.5,1.0
            id: display
        Image:
            id: imagePlt
            nocache: True 
            size_hint: 0.5,1.0
            source: 'classified.png'
            size: self.texture_size
            bcolor: 0.2,0.7,0.2,1.0
            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.pos
                    size: self.size

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1.0,0.25
        ClrButton:
            on_release: display.clear_canvas(display)
        
        SaveButton:
            on_release: display.save_canvas(display)

        ClassifyButton: #Run in reverse order to declaration (obvs...)
            on_release: imagePlt.reload()
            on_release: self.classify_image()
           
